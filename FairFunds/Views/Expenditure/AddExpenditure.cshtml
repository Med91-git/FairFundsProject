@model Expenditure
@{
	ViewData["Title"] = "Expenditure";
	IEnumerable<SelectListItem> categories = ViewBag.Categories;
}

@section Hero {
	<header class="header mb-5">
		<div class="hero text-white pt-7 pb-4">
			<div class="container-xl">
				<div class="row">
					<div class="row">
						<div class="col-12">
							<h1>New expense</h1>
						</div>
					</div>
				</div>
			</div>
		</div>
		@* <partial name="_Hero" />
	*@
	</header>
}

<section class="pb-4">
	<div class="container">
		<div class="row">
			<div class="col-md-6">
				<form asp-action="AddExpenditure" method=post>
					<input asp-for="customuserId" hidden>
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<div class="form-floating mb-4">
						<input asp-for="Title" class="form-control" />
						<label asp-for="Title" class="control-label"></label>
						<span asp-validation-for="Title" class="text-danger"></span>
					</div>
					<div class="form-floating mb-4">
						<input type="date" asp-for="Date" class="form-control" value="" />
						<label asp-for="Date" class="control-label"></label>
						<span asp-validation-for="Date" class="text-danger"></span>
					</div>

					<div class="form-floating mb-4">
						<input asp-for="Amount" class="form-control" value="" />
						<label asp-for="Amount" class="control-label"></label>
						<span asp-validation-for="Amount" class="text-danger"></span>
					</div>
					<div class="form-group mb-5">
						<label asp-for="CategoryID" class="control-label" hidden>Catégorie</label>
						<select asp-for="CategoryID" asp-items="categories" type="text" class="form-control">
							<option disabled selected>-- Select Category --</option>
						</select>
						<span asp-validation-for="CategoryID" class="text-danger"></span>
					</div>
					<div class="row">
						<div class="col-md-6 d-grid">
							<input type="submit" value="Add" class="btn btn-dark text-white mb-3" />
						</div>
						<div class="col-md-6 d-grid">
							<a class="btn btn-secondary text-white mb-3" asp-action="Index">Go back</a>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</section>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}