@model IEnumerable<FairFunds.Models.Expenditure>

@{
	ViewData["Title"] = "Expenditure";
	var users = (List<CustomUser>)(ViewData["Users"]); 

	double total = Model.Sum(e => e.Amount);
	double avg = total / users.Count();
}

@section Hero {
	<header class="header">
		<div class="hero text-white pt-7 pb-4">
			<div class="container-xl">
				<div class="row">
					<div class="row">
						<div class="col-12">
							<h1>Expenses</h1>
						</div>
					</div>
				</div>
			</div>
		</div>
		@* <partial name="_Hero" />
	*@
	</header>
}

<div class="col-md-12 pt-5">
	<div class="d-flex justify-content-end">
		<div class="col-md-3">
			<a class="btn btn-dark text-white fw-semibold" type="submit" asp-action="AddExpenditure">Add expense</a>
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-md-12">
			<table class="table">
				<thead>
					<tr>
						<th>
							@Html.DisplayNameFor(model => model.Title)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.Date)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.Amount)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.Category) 
						</th>
						<th>
							@Html.DisplayNameFor(model => model.CustomUser)
						</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>
								@Html.DisplayFor(modelItem => item.Title) 
							</td>
							<td>@Html.DisplayFor(modelItem => item.Date)</td>
							<td>@Html.DisplayFor(modelItem => item.Amount)</td>
							@if (item.Category == null)
							{
								<td>
									<a asp-action="UpdateExpenditure" asp-route-id="@item.ExpenditureID">Select category</a>
								</td> 
							}
							else
							{
								<td>@Html.DisplayFor(modelItem => item.Category.Name)</td> 

							}
							<td>@Html.DisplayFor(modelItem => item.CustomUser.FirstName)</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>

@foreach (var user in users) 
{
	double userTotal = Model.Where(e => e.CustomUser.FirstName == user.FirstName).Sum(e => e.Amount);
	if (userTotal > avg) 
	{
		<p>Le groupe doit @(userTotal - avg) € à @user.FirstName</p>
	}
	else
	{
		<p>@user.FirstName doit @(avg - userTotal) € au groupe</p> 
	}
} 
