@model Category

@{
	ViewData["Title"] = "Category";
}

@section Hero {
	<header class="header mb-5">
		<div class="hero text-white pt-7 pb-4">
			<div class="container-xl">
				<div class="row">
					<div class="row">
						<div class="col-12">
							<h1>Catégories</h1>
						</div>
					</div>
				</div>
			</div>
		</div>
		@* <partial name="_Hero" /> *@
	</header>
}

<div class="container">
	<h1 class="mb-5">New Category</h1>
	<div class="row">
		<div class="col-md-4">
			<form asp-action="CreateCategory" method=post>
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group vstack gap-2 mb-5">
					<label asp-for="Name" class="control-label"></label>
					<input asp-for="Name" class="form-control" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<div class="form-group mb-2">
					<input type="submit" value="Create" class="btn btn-dark" />
				</div>
			</form>
		</div>
	</div>
	<div>
		<a asp-action="Index" class="text-dark text-decoration-none">Back to List</a>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}