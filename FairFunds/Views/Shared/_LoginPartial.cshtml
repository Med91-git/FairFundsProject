@using Microsoft.AspNetCore.Identity
@using System.Security.Principal
@inject SignInManager<CustomUser> SignInManager
@inject UserManager<CustomUser> UserManager

@{
	CustomUser customUser = await UserManager.GetUserAsync(User);
}

<ul class="navbar-nav">
	@if (SignInManager.IsSignedIn(User))
	{
		@if (customUser.ProfilePicture != null)
		{
			<li class="nav-item">
				<image src="data:image/*;base64,@(Convert.ToBase64String(customUser.ProfilePicture))" height="40" width="40"></image>
			</li>
		}
		<li class="nav-item">
			<a class="nav-link fw-semibold" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @customUser.FirstName</a>
		</li>
		<li class="nav-item">
			<a class="nav-link fw-semibold" asp-controller="Expenditure" asp-action="Index">Dépenses</a>
		</li>
		<li class="nav-item">
			<a class="nav-link fw-semibold" asp-controller="Category" asp-action="Index">Catégories</a>
		</li>
		<li class="nav-item">
			<form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
				<button type="submit" class="nav-link btn btn-link fw-semibold">Déconnexion</button>
			</form>
		</li>
	}
	else
	{
		<li class="nav-item">
			<a class="nav-link fw-semibold" asp-area="Identity" asp-page="/Account/Register">Register</a>
		</li>
		<li class="nav-item">
			<a class="nav-link fw-semibold" asp-area="Identity" asp-page="/Account/Login">Login</a>
		</li>
	}
</ul>
